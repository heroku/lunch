box-reset()
  margin 0
  padding 0

border-radius(radius)
  -moz-border-radius radius
  -webkit-border-radius radius
  border-radius radius

transition(transition)
  -moz-transition transition
  -o-transition transition
  -webkit-transition transition
  transition transition

horizontal-line()
  background-image -webkit-gradient(linear, 0% 50%, 100% 50%, color-stop(0%, white), color-stop(10%, #d2d2d2), color-stop(90%, #d2d2d2), color-stop(100%, white))
  background-image -webkit-linear-gradient(left, white, #d2d2d2 10%, #d2d2d2 90%, white)
  background-image -moz-linear-gradient(left, white, #d2d2d2 10%, #d2d2d2 90%, white)
  background-image -o-linear-gradient(left, white, #d2d2d2 10%, #d2d2d2 90%, white)
  background-image linear-gradient(left, white, #d2d2d2 10%, #d2d2d2 90%, white)
  background-position bottom center
  background-repeat no-repeat
  background-size 100% 1px

helvetica-neue-font-stack()
  font-family "helvetica neue", helvetica, arial, geneva, sans-serif

proxima-nova-font-stack()
  font-family "proxima-nova", "helvetica neue", helvetica, arial, geneva, sans-serif

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  box-reset()
  helvetica-neue-font-stack()
  font-size 16px
  background black

.header
  padding 80px 0
  position relative

  background-attachement fixed
  background-color black
  background-image -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, rgba(0, 0, 0, 0.25)), color-stop(100%, rgba(0, 0, 0, 0.9))), url("/images/header-background.png")
  background-image -webkit-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image -moz-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image -o-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-position center
  background-repeat no-repeat
  -webkit-background-size cover
  color white
  -webkit-font-smoothing antialiased
  text-align center
  text-shadow 0 1px 0 rgba(0, 0, 0, 0.75)

  @media (max-width: 480px)
    display none

  h1,
  h2
    text-transform uppercase

  h1
    padding-top 88px

    proxima-nova-font-stack()
    background url("/images/logo.png") center top no-repeat
    font-size 1.625em
    letter-spacing 6px

  h2
    font-size 1em
    font-weight normal
    letter-spacing 6px

.suggestions
  float right
  position absolute
  right 12px
  top 12px

  border-radius(1000px)
  proxima-nova-font-stack()
  border 2px solid rgba(255, 255, 255, 0.5)
  color rgba(255, 255, 255, 0.5)
  font-size 0.875em
  font-weight bold
  padding 6px 10px
  text-decoration none
  transition(all 0.3s)

  &:hover
    border-color white
    color white

.content
  max-width 760px
  margin 0 auto
  position relative
  background white

.lunches
  box-reset()
  padding 40px auto

  list-style none

  li
    overflow hidden
    padding 20px 20px 21px

    horizontal-line()

    &:last-child
      padding-bottom 20px

      background-image none

  .date
    box-reset()
    float left
    margin 10px 40px 0 0
    width 100px

    proxima-nova-font-stack()
    color #554ea6
    font-size 1em
    font-weight normal

  .entry
    float left
    max-width 560px
    @media (max-width: 480px)
      float none
      clear both

  .summary
    box-reset()

    color #8b8b8b
    font-size 1.8em
    font-weight 300
    cursor pointer

  .description
    transition all 0.3s
    -moz-transition all 0.3s
    -webkit-transition all 0.3s
    display block
    height 0
    margin 0
    padding 0
    overflow hidden
    &.active
      height 140px
      padding 10px 0

  .active .summary
    color black
    font-weight 500
