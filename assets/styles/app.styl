*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  margin 0
  padding 0
  background-color #F8F8F8
  font-family "helvetica neue", helvetica, arial

h1
  color #CCC
  background: #333
  margin 0
  padding 20px 0 20px 240px
  font-weight normal
  font-size 24px

ul.lunches
  list-style none
  margin 30px 20px
  padding 0
  > li
    float none
    clear both
    overflow hidden
    margin: 0 0 30px 0
    .date
      float left
      min-width 220px
      padding-right 80px
      h3
        margin 5px 0 0 0
        padding 0
        color #999
        font-size 18px
      h4
        margin 0
        padding 0
        color #CCC
        font-size 14px
    .entry
      float left
      max-width 640px
      h2
        font-size 36px
        line-height 42px
        font-weight 300
        color #C2C2C2
        margin 0
        padding 0
        li.active &
          color black
      p
        font-weight 500
        font-size 16px
        line-height 24px
        color #999
        margin 0
        padding 10px 0
        font-weight 400
        // height: 0
        // opacity: 0
        &.active
          // height: 300px
          // opacity: 1
    &.active
      .date
        h3
          color black
        h4
          color black
      .entry
        h2
          color: black
