@import "mixins"

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  box-reset()
  helvetica-neue-font-stack()
  background black
  font-size 16px

.header
  padding 40px 0
  position relative

  background-attachement fixed
  background-color black
  background-image -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, rgba(0, 0, 0, 0.25)), color-stop(100%, rgba(0, 0, 0, 0.9))), url("/images/header-background.png")
  background-image -webkit-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image -moz-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image -o-linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-image linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.9)), url("/images/header-background.png")
  background-position center
  background-repeat no-repeat
  -webkit-background-size cover
  color white
  -webkit-font-smoothing antialiased
  text-align center
  text-shadow 0 1px 0 rgba(0, 0, 0, 0.75)

  @media (max-width: 480px)
    display none

  h1,
  h2
    text-transform uppercase

  h1
    padding-top 88px

    proxima-nova-font-stack()
    background url("/images/logo.png") center top no-repeat
    font-size 1.625em
    letter-spacing 6px

  h2
    font-size 1em
    font-weight normal
    letter-spacing 6px

.suggestions
  float right
  position absolute
  right 12px
  top 12px

  border-radius(1000px)
  proxima-nova-font-stack()
  border 2px solid rgba(255, 255, 255, 0.5)
  color rgba(255, 255, 255, 0.5)
  font-size 0.875em
  font-weight bold
  padding 6px 10px
  text-decoration none
  transition(all 0.3s)

  &:hover
    border-color white
    color white

.content
  margin 0 auto
  max-width 900px

.lunches
  box-reset()
  background white
  padding 20px 40px

  list-style none

  li
    overflow hidden
    padding 20px 20px 21px

    horizontal-line()

    &:last-child
      padding-bottom 20px

      background-image none

  .date
    box-reset()
    float left
    margin 10px 40px 0 0
    width 100px

    proxima-nova-font-stack()
    color #554EA6
    font-size 1em
    font-weight normal

  .entry
    float left
    max-width 560px

    @media (max-width: 480px)
      float none

  .summary
    box-reset()

    color #8B8B8B
    font-size 1.8em
    font-weight 300
    cursor pointer

  .description
    transition all 0.3s
    -moz-transition all 0.3s
    -webkit-transition all 0.3s
    display block
    height 0
    margin 0
    padding 0
    overflow hidden

    &.active
      height 140px
      padding 10px 0

  .active .summary
    color black
    font-weight 500

.cli
  padding: 20px 0

  text-align center

  code
    padding-top 20px

    monospace-font-stack()
    color #6D6B81
    font-size 0.8em

  @media (max-width: 650px)
    display none
